{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}\\src\\cli.js",
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "preLaunchTask": "build",
            "outFiles": [
                "${workspaceRoot}\\lib\\**"
            ],
            "stopOnEntry": false,
            "args": [
                "gen",
                "--inline",
                "--wasmversion", "0xd"
            ],
             "runtimeArgs": [ "--nolazy", "-r", "babel-polyfill" ]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858
        }
    ]
}